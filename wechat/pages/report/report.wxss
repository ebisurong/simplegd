/* pages/report/report.wxss */

/* 日期和黄历头部 */
.date-calendar-header {
  display: flex;
  margin-bottom: 20rpx;
  gap: 20rpx;
}

.date-info, .calendar-info {
  flex: 1;
  padding: 30rpx 20rpx;
  border-radius: 12rpx;
  text-align: center;
}

.date-info {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.calendar-info {
  background: linear-gradient(135deg, #ffeaa7 0%, #fab1a0 100%);
  color: #2d3436;
}

.date-text, .calendar-text {
  font-size: 28rpx;
  font-weight: 600;
}

/* 工种选择区域样式 */
.work-type-selection-area {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
  padding-left: 8rpx;
  border-left: 4rpx solid #1890ff;
}

.work-type-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.work-type-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 25rpx 15rpx;
  background: #ffffff;
  border: 2rpx solid #e5e5e5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666666;
  text-align: center;
  transition: all 0.3s ease;
  cursor: pointer;
  min-height: 80rpx;
  box-sizing: border-box;
}

.work-type-item.selected {
  background: #4a90e2;
  border-color: #4a90e2;
  color: #ffffff;
  font-weight: 600;
}

/* 安装内容选择区域样式 */
.content-selection-area {
  margin-bottom: 30rpx;
}

/* 安装内容网格 */
.content-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.content-item {
  flex: 0 0 calc(25% - 11.25rpx);
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 10rpx;
  color: #666666;
  border: 2rpx solid #e5e5e5;
  border-radius: 8rpx;
  background: #ffffff;
  font-size: 24rpx;
  min-height: 80rpx;
  transition: all 0.3s ease;
  text-align: center;
  cursor: pointer;
}

.content-item.selected {
  color: #ffffff;
  background: #52c41a;
  border: 2rpx solid #52c41a;
  font-weight: 600;
}

/* 保留兼容性样式 */
.content-checkbox {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 15rpx;
  color: #666666;
  border: 2rpx solid #e5e5e5;
  border-radius: 8rpx;
  background: #ffffff;
  font-size: 26rpx;
  min-height: 80rpx;
  box-sizing: border-box;
  transition: all 0.3s ease;
  text-align: center;
  cursor: pointer;
}

.content-checkbox.selected {
  color: #ffffff;
  background: #52c41a;
  border: 2rpx solid #52c41a;
  font-weight: 600;
}

/* 汇总显示区域 */
.summary-section {
  margin-bottom: 30rpx;
  padding: 25rpx;
  background: #f0f8ff;
  border-radius: 12rpx;
  border: 2rpx solid #e6f3ff;
}

.summary-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.summary-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1890ff;
}

.summary-total {
  margin-left: auto;
  font-size: 24rpx;
  color: #666666;
  background: #ffffff;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  border: 1rpx solid #d9d9d9;
}

.summary-empty {
  text-align: center;
  color: #999999;
  font-size: 26rpx;
  padding: 40rpx 0;
}

.summary-group {
  margin-bottom: 20rpx;
}

.summary-group:last-child {
  margin-bottom: 0;
}

.summary-group-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
  padding-left: 8rpx;
  border-left: 4rpx solid #1890ff;
}

.summary-items {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.summary-item {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  background: #ffffff;
  border: 1rpx solid #d9d9d9;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #333333;
}

.summary-item-remove {
  margin-left: 8rpx;
  width: 28rpx;
  height: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
}

.remove-icon {
  width: 100%;
  height: 100%;
}

/* 复选框组样式（保留兼容） */
.checkbox-group {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.padding-xs {
  flex: 0 0 calc(25% - 11.25rpx);
  box-sizing: border-box;
}

/* 复选框标签样式 */
.checkbox {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 10rpx;
  color: #666666;
  border: 2rpx solid #e5e5e5;
  border-radius: 8rpx;
  background: #ffffff;
  font-size: 24rpx;
  height: 80rpx;
  box-sizing: border-box;
  transition: all 0.3s ease;
  text-align: center;
}

/* 选中状态样式 */
.checked {
  color: #3eace2;
  background: rgba(49,165,253,0.08);
  border: 2rpx solid #3eace2;
  font-weight: bold;
}

/* 隐藏原生复选框 */
.checkbox-group checkbox {
  display: none;
}

/* 语音输入容器 */
.voice-input-container {
  position: relative;
}

.voice-textarea {
  width: 100%;
  min-height: 180rpx;
  padding: 20rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.5;
  background: #ffffff;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.voice-controls {
  display: flex;
  justify-content: center;
}

.voice-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 64rpx;
  height: 64rpx;
  background: transparent;
  border: none;
  border-radius: 50%;
  transition: all 0.3s ease;
  cursor: pointer;
}

.voice-btn.recording {
  animation: pulse 1s infinite;
}

.voice-icon-img {
  width: 100%;
  height: 100%;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}



/* 照片网格 */
.photo-count {
  font-size: 24rpx;
  color: #666666;
}

.photo-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.photo-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.photo-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.photo-delete {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ff4757;
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(255, 71, 87, 0.3);
}

.photo-watermark {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.7);
  color: #ffffff;
  font-size: 20rpx;
  padding: 8rpx;
  text-align: center;
}

.photo-add {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #cccccc;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fafafa;
  transition: all 0.3s ease;
}

.photo-add:active {
  background: #f0f0f0;
  border-color: #999999;
}

.add-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
  opacity: 0.6;
}

.add-text {
  font-size: 24rpx;
  color: #666666;
}

/* 照片提示 */
.photo-tips {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border-left: 4rpx solid #667eea;
}

.tip-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
  margin-top: 2rpx;
}

.tip-text {
  flex: 1;
  font-size: 24rpx;
  color: #666666;
  line-height: 1.5;
}

/* 位置信息 */
.location-info {
  margin-bottom: 20rpx;
}

.location-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.location-item:last-child {
  margin-bottom: 0;
}

.location-label {
  font-size: 26rpx;
  color: #666666;
  min-width: 160rpx;
}

.location-value {
  flex: 1;
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
}

.location-btn {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.btn-icon {
  font-size: 28rpx;
}

/* 提交区域 */
.submit-section {
  padding: 40rpx 0;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 12rpx;
}

.submit-btn[disabled] {
  background: #cccccc !important;
  color: #ffffff !important;
}



/* 加载遮罩 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background: #ffffff;
  border-radius: 16rpx;
  min-width: 200rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: #333333;
  text-align: center;
}

/* 响应式适配 */
@media (max-width: 400px) {
  .photo-item,
  .photo-add {
    width: 160rpx;
    height: 160rpx;
  }
  
  .photo-grid {
    gap: 15rpx;
  }
}