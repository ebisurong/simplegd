/* pages/history/history.wxss */

/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 0 0 100rpx 0;
}

/* 页面头部 */
.page-header {
  background: #fff;
  padding: 40rpx 30rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.page-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 10rpx;
}

.page-desc {
  font-size: 28rpx;
  color: #666;
  opacity: 0.8;
}

/* 搜索筛选区域 */
.search-filter-section {
  background: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.search-box {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.search-box:focus-within {
  border-color: #007aff;
  background: #fff;
  box-shadow: 0 0 0 6rpx rgba(0, 122, 255, 0.1);
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 30rpx;
  color: #333;
}

.search-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #007aff;
  border-radius: 8rpx;
  margin-left: 10rpx;
}

.search-icon {
  font-size: 28rpx;
  color: #fff;
}

.filter-row {
  display: flex;
  gap: 20rpx;
}

.filter-picker {
  flex: 1;
}

.filter-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #f8f9fa;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.filter-item:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.filter-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.filter-arrow {
  font-size: 20rpx;
  color: #999;
  margin-left: 10rpx;
}

/* 统计信息 */
.stats-section {
  display: flex;
  gap: 20rpx;
  margin: 0 20rpx 20rpx;
}

.stat-card {
  flex: 1;
  background: #fff;
  padding: 30rpx 20rpx;
  border-radius: 16rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #f0f0f0;
}

.stat-number {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #007aff;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 工单列表 */
.order-list {
  padding: 0 20rpx;
}

.order-card {
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 30rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.order-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.12);
}

/* 工单头部 */
.order-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-number {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
}

.order-time {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 基本信息 */
.order-info {
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  min-width: 140rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
}

/* 工作内容 */
.work-content {
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.work-section {
  margin-bottom: 20rpx;
}

.work-section:last-child {
  margin-bottom: 0;
}

.work-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 12rpx;
  display: block;
}

.work-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.work-tag {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.work-tag.work-type {
  background: #e3f2fd;
  color: #1976d2;
  border: 1rpx solid #bbdefb;
}

.work-tag.install-content {
  background: #f3e5f5;
  color: #7b1fa2;
  border: 1rpx solid #ce93d8;
}

/* 备注说明 */
.remark-section {
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 16rpx;
  display: block;
}

.remark-content {
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #007aff;
}

.remark-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
  display: block;
  margin-bottom: 16rpx;
}

.voice-play {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: #007aff;
  border-radius: 8rpx;
  width: fit-content;
}

.voice-icon {
  font-size: 24rpx;
  color: #fff;
}

.voice-text {
  font-size: 24rpx;
  color: #fff;
  font-weight: 500;
}

/* 现场照片 */
.photos-section {
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.photos-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.photos-count {
  font-size: 24rpx;
  color: #666;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.photos-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.photo-item {
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
  background: #f5f5f5;
  position: relative;
  width: 160rpx;
  height: 160rpx;
}

.photo-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  transition: transform 0.3s ease;
}

.photo-item:active .photo-image {
  transform: scale(0.95);
}

.photo-more {
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  color: #fff;
}

.more-text {
  font-size: 24rpx;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.more-count {
  font-size: 20rpx;
  opacity: 0.8;
}

/* 施工阶段 */
.construction-section {
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.construction-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.selected-count {
  font-size: 24rpx;
  color: #007aff;
  background: #e3f2fd;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.construction-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12rpx;
}

.stage-item {
  padding: 16rpx 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  text-align: center;
  transition: all 0.3s ease;
}

.stage-item.selected {
  background: #e3f2fd;
  border-color: #007aff;
  color: #007aff;
}

.stage-name {
  font-size: 26rpx;
  font-weight: 500;
}

/* 工单底部 */
.order-footer {
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fafafa;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.status-pending {
  background: #fff3cd;
  color: #856404;
  border: 1rpx solid #ffeaa7;
}

.status-processing {
  background: #d1ecf1;
  color: #0c5460;
  border: 1rpx solid #bee5eb;
}

.status-completed {
  background: #d4edda;
  color: #155724;
  border: 1rpx solid #c3e6cb;
}

.order-actions {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.action-text {
  font-size: 28rpx;
  color: #007aff;
  font-weight: 500;
}

.action-arrow {
  font-size: 24rpx;
  color: #007aff;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  background: #fff;
  margin: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 40rpx;
}

.empty-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 600;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  background: #fff;
  margin: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 浮动操作按钮 */
.fab {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(102, 126, 234, 0.4);
  z-index: 1000;
  transition: all 0.3s ease;
}

.fab:active {
  transform: scale(0.9);
}

.fab-icon {
  font-size: 48rpx;
  color: #fff;
  font-weight: 300;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .photos-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .construction-grid {
    grid-template-columns: 1fr;
  }
  
  .stats-section {
    flex-direction: column;
  }
  
  .filter-row {
    flex-direction: column;
    gap: 12rpx;
  }
}

/* 动画效果 */
.order-card {
  animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  .page-container {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  }
  
  .page-header,
  .search-filter-section,
  .order-card,
  .stat-card,
  .empty-state,
  .loading-state {
    background: #34495e;
    color: #ecf0f1;
  }
  
  .page-title,
  .section-title,
  .info-value,
  .filter-label,
  .action-text {
    color: #ecf0f1;
  }
  
  .page-desc,
  .info-label,
  .loading-text,
  .empty-desc {
    color: #bdc3c7;
  }
}

/* 分页控件样式 */
.pagination {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 30rpx;
  margin: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.pagination-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 160rpx;
  height: 80rpx;
  background: #007aff;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  margin: 0 20rpx;
}

.pagination-btn:not(.disabled):active {
  background: #0056cc;
  transform: scale(0.98);
}

.pagination-btn.disabled {
  background: #e5e5e5;
  color: #999;
  cursor: not-allowed;
}

.pagination-icon {
  font-size: 32rpx;
  font-weight: bold;
  margin: 0 8rpx;
}

.pagination-text {
  font-size: 28rpx;
}

.pagination-info {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 120rpx;
  height: 80rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  margin: 0 10rpx;
}

.page-current {
  font-size: 32rpx;
  font-weight: 600;
  color: #007aff;
}

.page-separator {
  font-size: 28rpx;
  color: #999;
  margin: 0 8rpx;
}

.page-total {
  font-size: 28rpx;
  color: #666;
}

/* 加载更多提示样式 */
.load-more-tip {
  padding: 30rpx;
  text-align: center;
  background-color: #f8f9fa;
  margin: 20rpx 0;
}

.tip-text {
  font-size: 28rpx;
  color: #999;
}

/* 图片预览弹窗样式 */
.image-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-modal-content {
  width: 90%;
  max-width: 600rpx;
  max-height: 80%;
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.image-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #f8f9fa;
  border-bottom: 1rpx solid #e9ecef;
}

.image-modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.image-modal-close {
  font-size: 48rpx;
  color: #666;
  line-height: 1;
  padding: 10rpx;
}

.image-modal-body {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
}

.image-swiper {
  width: 100%;
  height: 400rpx;
}

.modal-image {
  width: 100%;
  height: 100%;
}

/* 图片路径显示区域 */
.image-path-section {
  padding: 20rpx 30rpx;
  background-color: #f8f9fa;
  border-top: 1rpx solid #e9ecef;
}

.image-path-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.image-path-content {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.image-path-text {
  flex: 1;
  font-size: 24rpx;
  color: #333;
  word-break: break-all;
  line-height: 1.4;
  background-color: #fff;
  padding: 10rpx 15rpx;
  border-radius: 8rpx;
  border: 1rpx solid #ddd;
}

.copy-path-btn {
  font-size: 24rpx;
  color: #007aff;
  padding: 10rpx 20rpx;
  background-color: #fff;
  border: 1rpx solid #007aff;
  border-radius: 8rpx;
  white-space: nowrap;
}

.copy-path-btn:active {
  background-color: #007aff;
  color: #fff;
}

.image-modal-footer {
  padding: 20rpx;
  display: flex;
  justify-content: center;
  background-color: #f8f9fa;
}

.image-dots {
  display: flex;
  gap: 10rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #ccc;
  transition: background-color 0.3s;
}

.dot.active {
  background-color: #007aff;
}